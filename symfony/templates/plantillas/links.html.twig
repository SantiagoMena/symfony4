{% extends 'base.html.twig' %}

{% block title %}Hello PlantillasController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    Para generar una dirección URL relativa a una acción determinada se debe usar path('nombre_accion')

    Ejemplo: <a id="url_relativa" href="{{ path('app_plantillas_links') }}">Homepage</a>
    Para generar una dirección URL absoluta se debe usar url('nombre_accion')

    Ejemplo: <a id="url_absoluta" href="{{ url('app_plantillas_links') }}">Homepage</a>
</div>
{% endblock %}
