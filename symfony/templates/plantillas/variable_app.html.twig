{% extends 'base.html.twig' %}

{% block title %}Hello PlantillasController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <p id="app.user">{{ app.user }}</p>
    <p id="app.request.host">{{ app.request.host }}</p>
    <p id="app.session">{{ app.session.get('session') }}</p>
    {% for flash in app.flashes('alerta') %}
        <p id="app.flash">{{ flash }}</p>
    {% endfor %}
    <p id="app.environment">{{ app.environment }}</p>
    <p id="app.debug">{{ app.debug }}</p>
    <p id="app.token">{{ app.token }}</p>

</div>
{% endblock %}
